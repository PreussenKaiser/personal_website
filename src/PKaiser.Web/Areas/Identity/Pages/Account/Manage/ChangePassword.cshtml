@page
@model ChangePasswordModel
@{
    this.ViewData["Title"] = "Change password";
    this.ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-white pb-3">
    @ViewData["Title"]
</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label text-white" asp-for="Input.OldPassword"></label>
                <input class="form-control" autocomplete="current-password"
                       aria-required="true" asp-for="Input.OldPassword"/>

                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label text-white" asp-for="Input.NewPassword"></label>
                <input class="form-control" autocomplete="new-password"
                       aria-required="true" asp-for="Input.NewPassword"/>

                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label text-white" asp-for="Input.ConfirmPassword"></label>
                <input class="form-control" autocomplete="new-password"
                       aria-required="true" asp-for="Input.ConfirmPassword"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <button class="btn btn-danger w-100" type="reset">Reset</button>
                </div>
                <div class="col-6">
                    <button id="login-submit" class="btn btn-primary w-100"
                            type="submit">Change password</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
