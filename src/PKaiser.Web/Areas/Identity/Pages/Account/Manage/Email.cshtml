@page
@model EmailModel
@{
    this.ViewData["Title"] = "Manage Email";
    this.ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="text-white pb-3">
    @this.ViewData["Title"]
</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (this.Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group text-black mb-3">
                    <input class="form-control" disabled asp-for="Email"/>
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            <div class="form-floating text-black mb-3">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button id="change-email-button" class="w-100 btn btn-lg btn-primary"
                        type="submit" asp-page-handler="ChangeEmail">

                    Change email
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
