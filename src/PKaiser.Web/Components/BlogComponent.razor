@using PKaiser.Core.Models

<a href="Blog/ViewBlog?id=@this.Blog.Id" class="card bg-black text-white h-100">
    <h3>
        @this.Blog.Title
    </h3>
    <p>
        @this.Blog.Details
    </p>
</a>

@code
{
    /// <summary>
    /// Gets or initializes the blog to display.
    /// </summary>
    [Parameter]
    public Blog Blog { get; init; }
}
