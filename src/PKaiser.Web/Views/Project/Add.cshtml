@model PKaiser.Core.Models.Project

@{
    this.ViewData["Title"] = "Add Project";
}

<component type="typeof(HeaderComponent)"
           param-Title="@this.ViewData["Title"]"
           render-mode="Static"/>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <form method="post" asp-action="Add">

                <div class="form-floating mb-3">
                    <input class="form-control text-black" type="text"
                           asp-for="Title"/>

                    <label class="form-label" asp-for="Title">
                        Title
                    </label>
                    <span class="text-info" asp-validation-for="Title"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control text-black" type="text"
                           asp-for="Url"/>

                    <label class="form-label" asp-for="Url">
                        Url
                    </label>
                    <span class="text-info" asp-validation-for="Title"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Description"></textarea>

                    <label class="form-label" asp-for="Description">
                        Description
                    </label>
                    <span class="text-info" asp-validation-for="Title"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox"
                           asp-for="IsFeatured">

                    <label class="form-check-label text-white" asp-for="IsFeatured">
                        Feature project?
                    </label>
                </div>
                <div class="row mb-3">
                    <div class="col-6 d-grid">
                        <button class="btn btn-danger btn-lg" type="reset">
                            Reset
                        </button>
                    </div>
                    <div class="col-6 d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>