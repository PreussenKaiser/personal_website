@model Blog
@{
    this.ViewData["Title"] = "Edit Blog";
}

<component type="typeof(HeaderComponent)"
           param-Title="@this.ViewData["Title"]"
           render-mode="Static"/>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <form method="post" asp-action="EditBlog">
                <partial name="Forms/_BlogInputs"/>

                <div class="row mb-3">
                    <div class="col-6 d-grid">
                        <button class="btn btn-danger btn-lg" type="reset">
                            Reset
                        </button>
                    </div>
                    <div class="col-6 d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">
                            Update
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>