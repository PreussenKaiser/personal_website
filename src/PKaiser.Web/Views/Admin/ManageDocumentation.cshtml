@{
    this.ViewData["Title"] = "Manage Documentation";
}

<component type="typeof(HeaderComponent)"
           param-Title="@this.ViewData["Title"]"
           render-mode="Static"/>

<div class="container my-3">
    <div class="row">
        <div class="col-12 text-center p-3">
            <a class="btn btn-primary btn-outline" asp-controller="Documentation"
               asp-action="Write">

               + Write Document
           </a>
        </div>
    </div>
</div>